<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.speedy.pucitdossier.LoginActivity"
    android:paddingTop="@dimen/login_verticle_margin_large">

    <RelativeLayout android:id="@+id/rl_create_signup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "@string/tv_messsage_signup1"
            android:textSize="@dimen/signup1_title"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout android:id="@+id/middle_portion_signup1"
        android:background="@color/colorLightGrey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_create_signup1"
        android:layout_marginTop="@dimen/login_verticle_margin_large">

        <TextView android:id="@+id/tv_email_signup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_marginTop="@dimen/login_verticle_margin_small"
            android:text="Email"
            android:textStyle="bold"/>
        <EditText android:id="@+id/et_email_signup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_below="@id/tv_email_signup1"
            android:layout_marginTop="@dimen/margin_with_tv"
            android:background="@color/colorWhite"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_next_step_signup1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorLightGrey"
        android:layout_below="@id/middle_portion_signup1">

        <Button android:id="@+id/btn_next_step_signup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_verticle_margin_small"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_alignParentRight="true"
            android:background="@color/colorSkyBlue"
            android:text="Next Step"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
